                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"John Doe\",\n  \"phone\": \"+1234567890\"\n}"
                        },
                        "url": {
